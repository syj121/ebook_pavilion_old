<%= simple_form_for @role , html: {class: 'valid_engine'} do |form| %>
      <%= form.input :name,input_html: {class: 'validate[required]'},required: true %>
      <%= form.input :usable,input_html: {class: 'validate[required]'},required: true %>
      <%= form.input :parent_id, collection: Role.usable.pluck(:name, :id), input_html: {class: 'validate[required]'},required: true %>
      <%= form.input :description,input_html: {class: 'validate[required]'},required: true %>
  <%= render '/shared/button_form',f: form, back: (roles_path) %>
<% end %>